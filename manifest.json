{
    "manifest_version": 3,
    "name": "LinkedIn Authentic AI Assistant",
    "version": "1.0",
    "description": "Generate authentic, human-like LinkedIn comments and posts with AI.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon16.png",
        "default_title": "AI Engagement Toolkit"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "host_permissions": [
        "https://linkedin-ai-proxy.vercel.app/*"
    ]
}